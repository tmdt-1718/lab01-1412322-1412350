<div class="content-header">
    <div class="d-flex justify-content-end">
        <div class="mr-auto p-2"><span id="leftmenutoogle" onclick="tooglebuttonClick()">Show Left-Menu</span></div>
        <div class="p-2"><span><a style="color: #000;" href="/">Home</a></span></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><%= link_to albums_path do %><span style="color: #000;">Albums</span><% end %></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><span style="color: #000;">Pictures</span></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><span style="color: #1EB771;">Add New Picture</span></div>
        
    </div>
    <h1>ADD NEW PICTURES</h1>
</div>

<div class="container">
<%= form_for @image, url: user_album_images_path(current_user, request.params[:album_id]) do |f| %>
    <%= f.file_field :url, required: true %>
    <p id="notice"><%= notice%></p>
    <p id="alert"><%= alert%></p>
    <%= f.submit "Add", class: "btn btn-primary btn-round" %>                    
<% end %>
</div>
