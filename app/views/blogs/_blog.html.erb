<div class="card">
<div class="row">
<div class="col-md-3 col-sm-6 w3-agile-post-grids">
  <div class="w3-agile-post-img">
    <%= image_tag blog.imgcover.thumb, class: "img-fluid" %>
  </div>
</div>
<div class="col-md-9 col-sm-6 w3-agile-post-grids">
  <div class="w3-agile-post-info">
    <h4>
      <%= blog.tittle%>
    </h4>
    <p><%= content_summerize(blog.content)%></p>
    <ul>
      <li>By <a ><%= blog.user.name%></a></li>
      <li>Views: <%= blog.view%></li>
    </ul>
  </div>
  <%= link_to user_blog_path(blog.user, blog) do %>
  <i class="fa fa-search-plus"></i>
  <% end %>
</div>
</div>
</div>
