<!-- The modal -->
<div class="content-header">
    <div class="d-flex justify-content-end">
        <div class="mr-auto p-2"><span id="leftmenutoogle" onclick="tooglebuttonClick()">Show Left-Menu</span></div>
        <div class="p-2"><span><a style="color: #000;" href="/">Home</a></span></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><%= link_to blogs_path do %><span>Blogs</span><% end %></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>        
        <div class="p-2"><%= link_to user_blog_path(@blog.user, @blog) do %><span>Blogs details</span><% end %></div>
        
    </div>
    <h1>BLOG Details</h1>
</div>
    <hr>

<div class="row">
  <div class="col-lg-4 center">
    <%= image_tag @blog.imgcover, class: "img-fluid" %>
      <br>
      <%= link_to user_blog_path(@blog.user, @blog), method: :Delete do%>

        <button class="btn btn-primary btn-round-danger">
    Delete Post
    </button>
        <%end%>
        <%= link_to url_for(:back) do%>

        <button class="btn btn-primary btn-round">
    Go back
    </button>
        <%end%>
  </div>
  <div class="blog-block col-lg-7">
    <h1 class="text-center">
      <%= @blog.tittle%>
    </h1>
    <div class="row">

      <div class="blog-name col-lg-8">
        <span>By</span>
        <%= @blog.user.name%>
      </div>

      <div class="blog-view col-lg-4">
        <%= @blog.view%> view(s)
      </div>
    </div>
    <div class="blog-content">
      <hr>
      <%=simple_format h @blog.content %>
    </div>
  </div>
</div>
<div class="comment">
  <%= render 'comments/new', blog: @blog %>
    <h3> Comments list </h3>
    <div class="row">
      <div class="col-sm-12">
        <%= render @blog.comments %>
      </div>
    </div>
</div>