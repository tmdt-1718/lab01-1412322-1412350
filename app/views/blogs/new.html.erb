<div class="content-header">
    <div class="d-flex justify-content-end">
        <div class="mr-auto p-2"><span id="leftmenutoogle" onclick="tooglebuttonClick()">Show Left-Menu</span></div>
        <div class="p-2"><span><a style="color: #000;" href="/">Home</a></span></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><%= link_to blogs_path do %><span style="color: #000;">Blogs</span><% end %></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><%= link_to new_blog_path do %><span>Add New Post</span><% end %></div>
        
    </div>
    <h1>ADD NEW POST</h1>
</div>

<div class="container">
<%= form_for @blog do |f| %>
  <%= f.label :imgcover, "Cover of Blog:"%>
  </br>
    <%= f.file_field :imgcover, value: "choose"%>
      </br>
      <%= f.label :tittle, "Blog Tittle: "%>
        </br>
        <%= f.text_field :tittle%>
          </br>
          <%=f.label :content, "Blog content: "%>
            </br>
            <%= f.text_area :content, class: "multiline"%>
              
                <p id="notice">
                  <%= notice%>
                </p>
                <p id="alert">
                  <%= alert%>
                </p>
                <%= f.submit "Upload", class: "btn btn-primary btn-round" %>
                <% end %>
</div>