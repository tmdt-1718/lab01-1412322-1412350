<div class="content-header">
    <div class="d-flex justify-content-end">
        <div class="mr-auto p-2"><span id="leftmenutoogle" onclick="tooglebuttonClick()">Show Left-Menu</span></div>
        <div class="p-2"><span><a style="color: #000;" href="/">Home</a></span></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><%= link_to albums_path do %><span style="color: #000;">Albums</span><% end %></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><%= link_to user_album_path(current_user, @image.album) do %><span style="color: #000;">Pictures</span><% end %></div>
        <div class="p-2"><i class="fa-fw fa fa-arrow-circle-right"></i></div>
        <div class="p-2"><span style="color: #1EB771;">Picture's Detail</span></div>
        
    </div>
    <h1>PICTURE'S DETAIL</h1>
</div>

<div class="container">
<div class="row">
<div class="col-sm-6">
<%= image_tag @image.url, class: "img-fluid" %>
</div>
<div class="col-sm-6">
  <h3> Image detail </h3> </br>
  <ul>
    <li>By
      <a>
        <%= @image.user.name%>
      </a>
    </li>
    <li>Views:
      <%= @image.view%>
    </li>
  </ul>
</div>
</div>
</br>
<%= link_to user_album_image_path(current_user, @image.album, @image), method: :delete, data: {confirm: "Are you sure?"} do %>
<button class="btn btn-primary btn-round-danger">
Delete Picture
</button>
<%end%>
<%= link_to user_album_path(current_user, @image.album) do %>
<button class="btn btn-primary btn-round">
Back
</button>
<%end%>

</div>
<script>
  $("#albums").addClass("active");
  $("#menu-heading2").addClass("active");
  $("#heading2").addClass("active");
</script>